<!doctype html>
<html lang="en-gb">
  <head>
    <meta charset="utf-8" />
    <title>{{ title }}</title>
    <link rel="stylesheet" href="https://www.ft.com/__origami/service/build/v2/bundles/css?modules=o-normalise,o-header,o-teaser,o-teaser-collection,o-grid,o-buttons" />
    <link rel="stylesheet" href="./main.css" />
    <script>
      (function(scripts) {
        var cutsTheMustard = ('querySelector' in document && 'localStorage' in window && 'addEventListener' in window);
        if (cutsTheMustard) {
          scripts.forEach(function (src) {
            var o = document.createElement('script');
            o.async = o.defer = true;
            o.src = src;
            var s = document.getElementsByTagName('script')[0];
            s.parentNode.insertBefore(o, s);
          });
        }
      })([
        'https://www.ft.com/__origami/service/build/v2/bundles/js?modules=o-header',
        './main.js'
      ]);
    </script>
  </head>
  <body>
    {{> header }}
    <div role="main">
      {{> content }}
    </div>
  </body>
</html>
